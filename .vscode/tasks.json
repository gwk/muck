{
  "version": "2.0.0",
  "echoCommand": false,
  "type": "process",
  "presentation": {},
  "tasks": [
    {
      "label": "typecheck-current",
      "command": "craft-py-check",
      "args": ["${relativeFile}", "-print-ok", "-deps", "pithy", "writeup"],
      "group": {"kind": "build", "isDefault": true},
      "problemMatcher": "$craft"
    },
    {
      "label": "typecheck",
      "command": "craft-py-check",
      "args": ["muck"],
      "group": "build",
      "problemMatcher": "$craft"
    },
    {
      "label": "test and typecheck",
      "command": "make",
      "args": [],
      "group": {"kind": "test", "isDefault": true},
      "problemMatcher": "$craft"
    }
  ]
}
