{
  "version": "2.0.0",
  "echoCommand": false,
  "type": "process",
  "presentation": {},
  "tasks": [
    {
      "taskName": "typecheck-current",
      "command": "craft-py-check",
      "args": ["${relativeFile}"],
      "group": {"kind": "build", "isDefault": true},
      "problemMatcher": "$craft"
    },
    {
      "taskName": "typecheck",
      "command": "craft-py-check",
      "args": ["muck"],
      "group": "build",
      "problemMatcher": "$craft"
    },
    {
      "taskName": "test and typecheck",
      "command": "make",
      "args": [],
      "group": {"kind": "test", "isDefault": true},
      "problemMatcher": "$craft"
    }
  ]
}
