{
  "version": "0.1.0",
  "command": ".vscode/run.sh",
  "echoCommand": false,
  "isShellCommand": false,
  "showOutput": "always",
  "tasks": [
    { "taskName": "typecheck-file",
      "args": ["mypy", "${relativeFile}"],
      "isBuildCommand": true,
      "suppressTaskName": true
    },
    { "taskName": "typecheck",
      "args": ["make", "typecheck"],
      "suppressTaskName": true
    },
    { "taskName": "test",
      "args": ["make", "test"],
      "isTestCommand": true,
      "suppressTaskName": true
    }
  ]
}